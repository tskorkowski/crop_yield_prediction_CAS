{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "pylint.args": [
        "--disable=C0111",
        "--max-line-length=120"
    ],
    "editor.defaultFormatter": "ms-python.black-formatter",
    "python.languageServer": "Default",
}